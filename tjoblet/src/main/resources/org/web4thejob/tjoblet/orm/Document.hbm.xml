<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.web4thejob.tjoblet.orm.Document" schema="web4t" table="`DOCUMENT`" optimistic-lock="version">
        <meta attribute="friendlyName">Document</meta>

        <id name="id" type="long">
            <meta attribute="friendlyName">ID</meta>
            <meta attribute="index">1</meta>
            <column name="`ID`"/>
            <generator class="native"/>
        </id>

        <natural-id mutable="true">
            <property name="code" type="string">
                <meta attribute="friendlyName">Code</meta>
                <meta attribute="index">2</meta>
                <column name="`CODE`" length="255" not-null="true"/>
            </property>
        </natural-id>

        <version name="version" access="field" type="integer" column="`VERSION`"/>

        <many-to-one name="category" class="org.web4thejob.tjoblet.orm.Category"
                     fetch="select" not-null="true">
            <meta attribute="friendlyName">Category</meta>
            <meta attribute="index">3</meta>
            <column name="`CATEGORY_ID`" not-null="true"/>
        </many-to-one>

        <property name="body" type="materialized_clob">
            <meta attribute="friendlyName">Body</meta>
            <meta attribute="index">4</meta>
            <column name="`BODY`" length="5000000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
